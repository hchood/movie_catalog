<h3>Movies</h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Rating</th>
    </tr>
  </thead>

  <tbody>

    <% @movies.each do |movie| %>
      <tr>
        <td><a href="/movies/<%= movie['id'] %>"><%= movie['title'] %></a></td>
        <td><%= movie['year'] %></td>
        <td><%= movie['rating'] %></td>
      </tr>
    <% end %>

  </tbody>
</table>
