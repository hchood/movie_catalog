<% if @actor_name.empty? %>
  Sorry, we can't find an actor with that ID.
<% else %>

  <h3><%= @actor_name %></h3>

  <p>
    <%= @actor_name %> has starred in the following movies:
  </p>

  <% if @movies.empty? %>

    <p>This actor hasn't appeared in any movies.</p>

  <% else %>

    <ul>
      <% @movies.each do |movie| %>
        <li><a href="/movies/<%= movie[:id] %>"><%= movie[:title] %></a></li>
      <% end %>
    </ul>

  <% end %>
<% end %>
